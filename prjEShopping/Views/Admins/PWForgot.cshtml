
@{
    ViewBag.Title = "PWForgot";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="col-6 bg-secondary overflow-auto" style="height:500px">
    <div class="mt-5 px-5 py-5 border border-primary border-3 rounded-3">
        <h2>忘記密碼</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form method="post">
            <label>請輸入帳號信箱</label>
            <input type="text" class="form-control" id="AdminAccount" name="AdminAccount" required />
            <input type="submit" id="SendEmail" value="送出" class="btn btn-primary my-2" />
            <a href="@Url.Action("Login", "Admins")" class="btn btn-danger my-2">取消</a>
        </form>
        <button type="button" id="btn1" class="btn btn-info">主管信箱</button>
        @if (ViewBag.Message != null)
        {
            <p class="text-danger">@ViewBag.Message</p>
        }
    </div>
</div>

