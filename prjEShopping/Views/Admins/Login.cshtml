@model prjEShopping.Models.ViewModels.AdminLoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="col-6 bg-secondary overflow-auto" style="height:500px">
    <div class="mt-5 px-5 py-5 border border-primary border-3 rounded-3">
        <h2>登入後台</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form method="post">
            <label>帳號</label>
            <input type="text" class="form-control" id="AdminAccount" name="AdminAccount" />
            <label>密碼</label>
            <input type="password" class="form-control" id="AdminPassword" name="AdminPassword" />
            <input type="submit" id="login" value="登入" class="btn btn-primary my-2" />   
            <p>
                @Html.ActionLink("忘記密碼", "PWForgot", null, new { @class = "btn btn-primary" })
            </p>
        </form>
    </div>
</div>

