    <script src="https://kit.fontawesome.com/df26c5ac19.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        //呼叫購物車數字api
        const totalItemCount = document.querySelectorAll('.totalItemCount')
        async function getTotalCount() {
            const response = await fetch('/UserCart/GetTotalCount');
            const num = await response.json();
            totalItemCount.forEach(element => {
                element.textContent = num;
            });

            const checkoutLink = document.getElementById('checkoutLink');
            //判斷數量是否0,0無法結帳
            if (num == 0) {                
                checkoutLink.addEventListener('click', (event) => {
                    //alert('購物車中沒有商品,無法前往結帳。');
                    $("#checkCartModal").modal("show");
                    event.preventDefault();
                });
            } else {
                checkoutLink.removeEventListener('click', (event) => {
                    event.preventDefault();
                })

            }
        }
        getTotalCount();

        

        // 在 "確定" 按鈕上加入 click 事件處理
        document.getElementById('confirmButton').addEventListener('click', function () {
            // 點擊 "確定" 按鈕時呼叫更新函式
            getTotalCount();
        });

    </script>

    @RenderSection("Scripts", required: false)@*引用js或jquery*@
</body>
</html>
