                                <li class="nav-item px-3 d-flex align-items-center">
                                    <a href="@Url.Content("~//")" class="text-decoration-none hover-opacity">
                                        <div class="d-flex align-items-center">
                                            <img src="~/img/man32px.png" alt="User Avatar" class="me-2">
                                            @*<span class="fw-bold text-light">John Doe</span>*@
                                            <span class="fw-bold text-light">@(User.Identity.Name)</span>
                                        </div>
                                    </a>
                                </li>
                                <li class="nav-item px-3">
                                    <a href="@Url.Content("~/UserCart/UserShoppingCart")" class="position-relative text-decoration-none">
                                        購物車
                                        <i class="bi bi-cart-fill fs-4"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger totalItemCount"></span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">購買清單</a>
                                </li>
                                <li class="nav-item">
                                    @*<a class="nav-link" href="0.index.html">登出</a>*@
                                    <a>@Html.ActionLink("登出", "UserLogout", "UserMembers", new { area = "" }, new { @class = "nav-link" })</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="container">
                            <div class="collapse navbar-collapse">
                                <ul class="navbar-nav me-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">賣家註冊</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">賣家登入</a>
