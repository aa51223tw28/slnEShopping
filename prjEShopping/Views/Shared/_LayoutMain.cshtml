            //        //alert('購物車中沒有商品,無法前往結帳。');
            //        $("#checkCartModal").modal("show");
            //        event.preventDefault();
            //    });
            //} else {
            //    checkoutLink.removeEventListener('click', (event) => {
            //        event.preventDefault();
            //    })
            //}
        }
        getTotalCount();



        //要結合到UserSingleProduct.cshtml//按下modal的確認後更新購物車數字(上方html寫了兩個btn的hidden)
        const confirmButton = document.querySelector('.confirmButton');
        confirmButton.addEventListener('click', function () {
            // 點擊 "確定" 按鈕時呼叫更新函式
            getTotalCount();
        });


        //搜尋欄
        async function searchSubcategory() {
            var subcategoryName = document.getElementById('subcategoryInput').value;
            //console.log(subcategoryName);
            var link = document.getElementById('searchLink');

            const response = await fetch(`/Main/SearchSubcategoryIdapi?subcategoryName=${encodeURIComponent(subcategoryName)}`);
            const datas = await response.json();
            //console.log(datas);
            //link.href = '/UserProduct/UserProdutList?subcategory=' + datas;
            window.location.href = '/UserProduct/UserProdutList?subcategory=' + datas;
        }

        //買家的照片名字
        $(document).ready(async function () {
            const result = await $.get("/UserMembers/UserPhotoName")
                       
            const userImagePath = result.UserImagePath;
            const username = result.UserName;
            const imgs = document.querySelectorAll("#userImagePath");
            const names = document.querySelectorAll("#username");

            const baseUrl = window.location.origin;          
            
            imgs.forEach(img => {
                img.src = `${baseUrl}/img/${userImagePath}`;
            })
           
            names.forEach(name => {
                name.textContent = username;
            })
            
                              
        })
        
    </script>

