@model IEnumerable<prjEShopping.Models.ViewModels.SellerShipmentVM>
@{  
    ViewBag.Title = "ShipmentList";
    Layout = "~/Views/Shared/_LayoutSellerMain.cshtml";
}
<div class="col-8 col-md-9 col-lg-9 col-xl-10 container bg-warning rounded-2 border border-info border-1 ">
    <p class="fs-4 mt-3 fw-bold text-center text-primary">訂單一覽</p>
    <hr>
    <table class="table table-striped fw-bold">
        <thead>
            <tr>
                <th scope="col">序號</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ShipmentDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ShipmentNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ShipmentStatus)</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int count = 0;

                foreach (var item in Model) 
                { count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@(item.ShipmentDate.ToString("yyyy-MM-dd"))</td>
                        <td>@Html.DisplayFor(modelItem => item.ShipmentNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShipmentStatus)</td>
                    </tr>
                }}
        </tbody>
    </table>
   </div>
