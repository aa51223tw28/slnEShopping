                <input type="checkbox" id="StorewideAll" name="Storewide" value="All" />
                <label>商家:</label>
                <select type="text" id="StorewideSeller" name="Storewide">
                    <option value="" disabled selected>請選擇</option>
                    <option>商家A</option>
                    <option>商家B</option>
                    <option>商家C</option>
                </select>*@
