            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClaimDeadline, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" id="ClaimDeadline" name="ClaimDeadline" />
