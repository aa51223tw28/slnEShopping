@model List<prjEShopping.Models.ViewModels.UserOrderAllVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}

<div class="bg-light">
    <div class="container py-3">
        <div class="row py-2 gx-5">
            <div class="col-sm-auto col-md-3 bg-light">
                <div class="d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <img src="~/img/comment.jpeg" alt="" class="img-fluid">
                        <span class="fw-bold ms-3">John Doe</span>
                    </div>
                    <!-- 手風琴左邊選項區 -->
                    <div class="accordion mt-3" id="accordionPanelsStayOpenExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
                                    我的帳戶
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                                <div class="accordion-body">
                                    <ul class="navbar-nav me-auto">
                                        <li class="nav-item">
                                            <a href="6.index.html" class="link-blue text-decoration-none fw-bold">個人檔案</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="7.index.html" class="link-blue text-decoration-none fw-bold">修改密碼</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                                    我的焦點
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                                <div class="accordion-body">
                                    <ul class="navbar-nav me-auto">
                                        <li class="nav-item">
                                            <a href="@Url.Content("~/UserOrder/UserOrderDetailAll")" class="link-blue text-decoration-none fw-bold">購買清單</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Content("~/UserCoupon/UserCouponList")" class="link-blue text-decoration-none fw-bold">優惠券</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Content("~/UserFollow/UserFollowProduct")" class="link-blue text-decoration-none fw-bold">追蹤商品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Content("~/UserFollow/UserFollowSeller")" class="link-blue text-decoration-none fw-bold">追蹤店家</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- 手風琴左邊選項區 -->
                </div>
            </div>

            <!-- 右邊分頁區 -->
            <div class="col-sm-auto mt-sm-3 col-md-9 bg-warning mt-lg-0 rounded">
                <div class="d-flex align-items-center justify-content-between">
                    <p class="fs-4 mt-3 fw-bold">出貨狀態</p>
                </div>

                <hr style="margin: 0;">
                <div class="row my-3">
                    @if (Model.FirstOrDefault().ShipDate == DateTime.MinValue)//DateTime.MinValue代表日期時間的最小值（0001/01/01 00:00:00）
                    {
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/list128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">準備中</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("HH:mm:ss")</span>
                        </div>
                    }
                    else if (Model.FirstOrDefault().ArrivalTimeDate == DateTime.MinValue)
                    {
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/list128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">準備中</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/delivery128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已出貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("HH:mm:ss")</span>
                        </div>
                    }
                    else if (Model.FirstOrDefault().PickDate == DateTime.MinValue)
                    {
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/list128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">準備中</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/delivery128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已出貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/dropshipping128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">待收貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-light border border-3" data-shipmentid="@Model.FirstOrDefault().ShipmentId" id="DemoPick">Demo已領取</button>
                        </div>

                    }
                    else if (Model.FirstOrDefault().CompletionDate == DateTime.MinValue)
                    {
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/list128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">準備中</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/delivery128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已出貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/dropshipping128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">待收貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/package128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已領取</span>
                            <span class="text-muted">@Model.FirstOrDefault().PickDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().PickDate.ToString("HH:mm:ss")</span>
                        </div>
                    }
                    else
                    {
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/list128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">準備中</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipmentDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/delivery128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已出貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ShipDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/dropshipping128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">待收貨</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().ArrivalTimeDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/package128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已領取</span>
                            <span class="text-muted">@Model.FirstOrDefault().PickDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().PickDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/completed128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已完成</span>
                            <span class="text-muted">@Model.FirstOrDefault().CompletionDate.ToString("yyyy-MM-dd")</span>
                            <span class="text-muted">@Model.FirstOrDefault().CompletionDate.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="col-2 d-flex flex-column align-items-center">
                            <img src="~/img/feedback128px.png" alt="" style="max-width: 80px;">
                            <span class="fs-5">已評價</span>                            
                            <a href="@Url.Action("Index", "UserFeedback", new {shipmentId=Model.FirstOrDefault().ShipmentId})" class="btn btn-blue">去評價</a>
                        </div>
                    }
                </div>


                <div class="card mb-3">

                    <div class="row g-0 bg-lightyellow">
                        <div class="col">
                            <div class="card-body d-flex">
                                <h5 class="card-title">訂單編號：</h5>
                                <h5 class="card-title">@Model.FirstOrDefault().OrderNumber</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row g-0 bg-lightyellow">
                        <div class="col">
                            <div class="card-body d-flex">
                                <h5 class="card-title">出貨編號：</h5>
                                <h5 class="card-title">@Model.FirstOrDefault().ShipmentNumber</h5>
                            </div>
                        </div>
                    </div>

                    @foreach (var item in Model)
                    {
                        <!-- 出貨單號1 -->
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img src="~/img/@Html.DisplayFor(modelItem => item.ProductImagePathOne)" class="img-fluid rounded-start p-2" alt="...">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <p style="margin: 0;"> @item.ProductName </p>
                                    <p style="margin: 0;" class="text-muted fs-6">X @item.Quantity</p>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-center justify-content-center">
                                <div class="card-body">
                                    <h5 class="card-title">@Math.Round(item.SubTotal).ToString("C0")</h5>
                                    <a href="@Url.Action("Index", "UserFeedback", new {shipmentId=Model.FirstOrDefault().ShipmentId, productId=item.ProductId})" class="btn btn-blue">去評價</a>
                                </div>
                            </div>

                        </div>
                        <!-- 出貨單號1 -->
                    }



                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        //demo已領取
        $(document).ready(function () {
            $("#DemoPick").each(function () {
                $(this).on('click', async function () {
                    var shipmentid = $(this).attr("data-shipmentid")
                    //console.log(shipmentid)
                    const result = await $.get("/UserOrder/UserShipmentDemoPickapi?shipmentid=" + shipmentid)
                    location.reload();
                })
            })
        })
       
    </script>

}