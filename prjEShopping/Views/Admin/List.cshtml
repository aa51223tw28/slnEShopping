@model IEnumerable<prjEShopping.Models.ViewModels.AdminVM>


@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-9 bg-secondary ">
    <div class="container mt-2 ps-0 pe-0 ">
        <div class="bg-info">
            <p class="bg-primary text-light ps-3 fs-5">管理權限設定</p>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tab101" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="false">員工一覽</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab102" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">新增員工</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab103" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">管理員資料修改</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab104" data-bs-toggle="tab" data-bs-target="#contact2" type="button" role="tab" aria-controls="contact" aria-selected="false">員工資料修改</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab105" data-bs-toggle="tab" data-bs-target="#contact3" type="button" role="tab" aria-controls="contact" aria-selected="false">權限設置</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active pt-2 pb-2 ps-2 pe-2 " id="home" role="tabpanel" aria-labelledby="tab101">
                    <table class="table table-bordered border-primary fs-6 d-none d-md-table ">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.AdminNumber)</td>
                                <td>@Html.DisplayNameFor(model => model.Title)</td>
                                <td>@Html.DisplayNameFor(model => model.AdminName)</td>
                                <td>@Html.DisplayNameFor(model => model.PermissionsId)</td>
                                <td>@Html.DisplayNameFor(model => model.JobStatus)</td>
                                <td>@Html.DisplayNameFor(model => model.AdminAccount)</td>
                                <td>@Html.DisplayNameFor(model => model.AdminPassword)</td>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AdminNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminName)</td>
                                <td>@Html.DisplayFor(modelItem => item.PermissionsId)</td>
                                <td>@Html.DisplayFor(modelItem => item.JobStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminAccount)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminPassword)</td>
                            </tr>
                        }
                    </table>
                    <table class="table table-bordered border-primary d-md-none" style="font-size: 6px;">
                        <thead>
                            <tr>
                                <td>項目</td>
                                <td>內容</td>
                            </tr>

                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.AdminNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminNumber)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.AdminName)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminName)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.PermissionsId)</td>
                                <td>@Html.DisplayFor(modelItem => item.PermissionsId)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.JobStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.JobStatus)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.AdminAccount)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdminAccount)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.AdminPassword)</td>
                                <td class="text-break">@Html.DisplayFor(modelItem => item.AdminPassword)</td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="tab-pane fade pt-2 pb-2 ps-2 pe-2" id="profile" role="tabpanel" aria-labelledby="tab102">
                    @Html.Partial("AdminRegister")
                </div>
                <div class="tab-pane fade pt-2 pb-2 ps-2 pe-2" id="contact" role="tabpanel" aria-labelledby="tab103">
                    @Html.Partial("AdminEdit")
                </div>
                <div class="tab-pane fade pt-2 pb-2 ps-2 pe-2" id="contact2" role="tabpanel" aria-labelledby="tab104">
                    @Html.Partial("AdminEdit2", Model.FirstOrDefault())
                </div>
                <div class="tab-pane fade pt-2 pb-2 ps-2 pe-2" id="contact3" role="tabpanel" aria-labelledby="tab105">
                    @*還沒放*@
                </div>
            </div>
        </div>
    </div>
</div>
