@section Scripts{
    <script>
            $(document).ready(async function () {

            //先顯示圖片
            const result = await $.get("/UserMembers/UserPhotoName")

                const sellerImagePath = result.SellerImagePath;
                const img = document.querySelector("#sellerImagePaths");
            const baseUrl = window.location.origin;
            img.src = `${baseUrl}/img/${sellerImagePath}`;

            //預覽圖片
            $("#formFile").change(function () {
                readURL(this);
            })

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#sellerImagePaths").attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0])
                }
            }

            //等按下確認後再submit
                $("#savebutton").on('click', function (event) {
                event.preventDefault();
                $("#savemodal").modal("show")
            })

            $("#confirmButton").on("click", function () {
                $("#savemodal").modal("hide")
                $("#sellerEditForm").submit();
            })
        })

